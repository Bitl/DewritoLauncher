                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="BorderBrush" Value="White" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid},
                                               Path=IsMouseOver}" Value="True">
                                            <Setter Property="BorderBrush" Value="#FF4563B4" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                                <Style TargetType="{x:Type Label}">
                                    <Setter Property="Foreground" Value="White" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid},
                                               Path=IsMouseOver}" Value="True">
                                            <Setter Property="Foreground" Value="#FFA0BAFF" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Style.Resources>
                        </Style>
                    </Grid.Style>
                    <Border BorderBrush="White" BorderThickness="1">
                        <Grid>
                        <Button x:Name="btnCustom" Click="btnCustomization_Click" BorderThickness="0" Template="{DynamicResource BackgroundButton}">
                            <Button.Background>
                                <ImageBrush ImageSource="Resources/Customization.png" Stretch="UniformToFill"/>
                            </Button.Background>
                            <Button.Resources>
                                <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                                    <Border Name="border" BorderThickness="0" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Resources>
                        </Button>
                        </Grid>
                    </Border>
                    
                    <Label Content="Customization" FontSize="20" Margin="1,100,1,1" FontFamily="Segoe UI Light">
                        <Label.Background>
                            <SolidColorBrush Color="Black" Opacity="0.7"/>
                        </Label.Background>
                    </Label>
                </Grid>
            </st:AutoGrid>

        </Grid>
        <!--
        <Grid x:Name="Update" Visibility="Hidden">
            <Grid>
                <Grid Background="Black" Opacity="0.7" />
                <RichTextBox x:Name="UpdateContent" HorizontalAlignment="Left" Height="458" Margin="10,10,0,0" VerticalAlignment="Top" Width="633" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto">
                    <FlowDocument/>
                </RichTextBox>
            </Grid>
        </Grid>
        -->
        <Border x:Name="Debug" Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="1" Margin="5,5,10,12" Visibility="Hidden">
            <Grid>
                <Grid.Background>
                    <SolidColorBrush Color="White" Opacity="0.07"/>
                </Grid.Background>
                <RichTextBox x:Name="UpdateContent" HorizontalAlignment="Left"  VerticalAlignment="Top" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto">
                    <FlowDocument/>
                </RichTextBox>
                <st:AutoGrid Columns="*" RowHeight="*" Margin="0,500,20,5">
                    <Border BorderBrush="White" BorderThickness="1" Width="75" Height="30" HorizontalAlignment="Right">
                        <Border.Background>
                            <SolidColorBrush Color="White" Opacity="0.07"/>
                        </Border.Background>
                        <Button x:Name="btnOkDebug" Click="btnOkDebug_Click" Content="Ok" Style="{StaticResource Hover}"/>
                    </Border>
                </st:AutoGrid>
            </Grid>
        </Border>

        <Border x:Name="Customization" Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="1" Margin="5,5,10,12" Visibility="Hidden">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                    <Style x:Key="Header" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Grid.ColumnSpan" Value="2"/>
                    </Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="White" />
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="CaretBrush" Value="White"/>
                    </Style>
                    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource {x:Type ComboBox}}">
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                    </Style>
                    <Style TargetType="{x:Type Slider}">
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="TickPlacement" Value="BottomRight"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    </Style>
                    <Style TargetType="{x:Type xctk:ColorPicker}">
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="ColorMode" Value="ColorCanvas"/>
                        <Setter Property="UsingAlphaChannel" Value="False"/>
                        <Setter Property="ShowDropDownButton" Value="False"/>
                        <Setter Property="DisplayColorAndName" Value="True"/>
                        <Setter Property="Template" Value="{StaticResource ColorPickerControlTemplate}"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="White"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>
                <st:AutoGrid Columns="*,*">
                    <st:AutoGrid.Background>
                        <SolidColorBrush Color="White" Opacity="0.07"/>
                    </st:AutoGrid.Background>
                    <st:AutoGrid Columns="auto,*" RowHeight="auto" Margin="5,5,25,5">
                        <TextBlock Style="{StaticResource Header}">Player Settings</TextBlock>
                        <TextBlock>Player Name:</TextBlock>
                        <TextBox Width="auto" Text="{Binding Player.Name}">
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0.07"/>
                            </TextBox.Background>
                        </TextBox>

                        <TextBlock Style="{StaticResource Header}" Margin="5,20,5,5">Armor Customization</TextBlock>
                        <TextBlock>Helmet:</TextBlock>
                        <ComboBox x:Name="cmbHelmet" DropDownClosed="helmetClose" DropDownOpened="helmetOpen" ItemsSource="{Binding Player.Armor.HelmetChoices}" SelectedItem="{Binding Player.Armor.Helmet}" DisplayMemberPath="DisplayName" MaxDropDownHeight="393"/>
                        <TextBlock>Chest:</TextBlock>
                        <ComboBox  x:Name="cmbChest" DropDownClosed="chestClose" DropDownOpened="chestOpen" ItemsSource="{Binding Player.Armor.ChestChoices}" SelectedItem="{Binding Player.Armor.Chest}" DisplayMemberPath="DisplayName"/>
                        <TextBlock>Shoulders:</TextBlock>
                        <ComboBox x:Name="cmbShoulders" DropDownClosed="shouldersClose" DropDownOpened="shouldersOpen" ItemsSource="{Binding Player.Armor.ShoulderChoices}" SelectedItem="{Binding Player.Armor.Shoulders}" DisplayMemberPath="DisplayName" MaxDropDownHeight="325"/>
                        <TextBlock>Arms:</TextBlock>
                        <ComboBox x:Name="cmbArms" DropDownClosed="armsClose" DropDownOpened="armsOpen" ItemsSource="{Binding Player.Armor.ArmChoices}" SelectedItem="{Binding Player.Armor.Arms}" DisplayMemberPath="DisplayName" MaxDropDownHeight="293"/>
                        <TextBlock>Legs:</TextBlock>
                        <ComboBox x:Name="cmbLegs" ItemsSource="{Binding Player.Armor.LegChoices}" SelectedItem="{Binding Player.Armor.Legs}" DisplayMemberPath="DisplayName" MaxDropDownHeight="260"/>


                    </st:AutoGrid>
                    <st:AutoGrid Columns="auto,*" RowHeight="auto" Margin="0,5,25,5">
                        <TextBlock Style="{StaticResource Header}">Armor Colors</TextBlock>
                        <TextBlock>Primary:</TextBlock>
                        <xctk:ColorPicker x:Name="clrPrimary" SelectedColor="{Binding Player.Colors.Primary}">
                            <xctk:ColorPicker.Background>
                                <SolidColorBrush Color="White" Opacity="0.07"/>
                            </xctk:ColorPicker.Background>
                        </xctk:ColorPicker>

                        <TextBlock>Secondary:</TextBlock>
                        <xctk:ColorPicker SelectedColor="{Binding Player.Colors.Secondary}">
                            <xctk:ColorPicker.Background>
                                <SolidColorBrush Color="White" Opacity="0.07"/>
                            </xctk:ColorPicker.Background>
                        </xctk:ColorPicker>
                        <TextBlock>Visor:</TextBlock>
                        <xctk:ColorPicker SelectedColor="{Binding Player.Colors.Visor}">
                            <xctk:ColorPicker.Background>
                                <SolidColorBrush Color="White" Opacity="0.07"/>
                            </xctk:ColorPicker.Background>
                        </xctk:ColorPicker>
                        <TextBlock>Lights:</TextBlock>
                        <xctk:ColorPicker SelectedColor="{Binding Player.Colors.Lights}">
                            <xctk:ColorPicker.Background>
                                <SolidColorBrush Color="White" Opacity="0.07"/>
                            </xctk:ColorPicker.Background>
                        </xctk:ColorPicker>
                        <TextBlock>Holo:</TextBlock>
                        <xctk:ColorPicker SelectedColor="{Binding Player.Colors.Holo}">
                            <xctk:ColorPicker.Background>
                                <SolidColorBrush Color="White" Opacity="0.07"/>
                            </xctk:ColorPicker.Background>
                        </xctk:ColorPicker>
                    </st:AutoGrid>
                    <st:AutoGrid Columns="*" RowHeight="*" Margin="0,240,-280,0">
                        <Border BorderBrush="White" BorderThickness="1" Width="75" Height="30" HorizontalAlignment="Right">
                            <Border.Background>
                                <SolidColorBrush Color="White" Opacity="0.07"/>
                            </Border.Background>
                            <Button x:Name="btnApply" Click="btnApply_Click" Content="Ok" Style="{StaticResource Hover}"/>
                        </Border>
                    </st:AutoGrid>
                </st:AutoGrid>
            </Grid>
        </Border>

        <Border x:Name="ChangelogGrid" Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="1" Margin="5,5,10,12" Visibility="Hidden">
            <Grid Grid.ColumnSpan="2">
                <Grid.Background>
                    <SolidColorBrush Color="White" Opacity="0.07"/>
                </Grid.Background>
                <TextBox x:Name="ChangelogContent" Margin="5" Background="Transparent" Foreground="White" BorderThickness="0" IsReadOnly="True" TextWrapping="WrapWithOverflow" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Text="Loading..." />
                <st:AutoGrid Columns="*" RowHeight="*" Margin="0,500,30,0">
                    <Border BorderBrush="White" BorderThickness="1" Width="75" Height="30" HorizontalAlignment="Right">
                        <Border.Background>
                            <SolidColorBrush Color="White" Opacity="0.07"/>
                        </Border.Background>
                        <Button x:Name="btnOk" Click="btnOk_Click" Content="Ok" Style="{StaticResource Hover}"/>
                    </Border>
                </st:AutoGrid>
            </Grid>
        </Border>

        <Border x:Name="Settings" Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="1" Margin="5,5,10,12" Visibility="Hidden">
            <Grid x:Name="GameSettings">
                <Grid.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                    <Style x:Key="Header" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Grid.ColumnSpan" Value="2"/>
                    </Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="White" />
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="CaretBrush" Value="White"/>
                    </Style>
                    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource {x:Type ComboBox}}">
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style TargetType="{x:Type Slider}">
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="TickPlacement" Value="BottomRight"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    </Style>
                    <Style TargetType="{x:Type xctk:ColorPicker}">
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="ColorMode" Value="ColorCanvas"/>
                        <Setter Property="UsingAlphaChannel" Value="False"/>
                        <Setter Property="ShowDropDownButton" Value="False"/>
                        <Setter Property="DisplayColorAndName" Value="True"/>
                        <Setter Property="Template" Value="{StaticResource ColorPickerControlTemplate}"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="White" Opacity="0.7"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="{x:Type CheckBox}">
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                    </Style>
                </Grid.Resources>
                <st:AutoGrid Columns="*,*">
                    <st:AutoGrid.Background>
                        <SolidColorBrush Color="White" Opacity="0.07"/>
                    </st:AutoGrid.Background>
                    <st:AutoGrid Columns="auto,*" RowHeight="auto" Margin="5,5,25,5">
                        <TextBlock Style="{StaticResource Header}">Graphics Settings</TextBlock>
                        <TextBlock>Field of View:</TextBlock>
                        <DockPanel>
                            <TextBox DockPanel.Dock="Right" Text="{Binding Video.FieldOfView}" Width="60" TextAlignment="Center">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0.07"/>
                                </TextBox.Background>
                            </TextBox>
                            <Slider Name="sldFov" DockPanel.Dock="Left" Minimum="30" Maximum="150" TickFrequency="5" IsSnapToTickEnabled="True" Value="{Binding Video.FieldOfView}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
                        </DockPanel>

                        <CheckBox Name="chkCenter" Grid.ColumnSpan="2" IsChecked="{Binding Video.CrosshairCentered}" Template="{DynamicResource CheckBoxControlTemplate1}">
                            Centered Crosshair
                        </CheckBox>

                        <TextBlock Style="{StaticResource Header}" Margin="5,25,5,5">Input Settings</TextBlock>
                        <CheckBox Name="chkRaw" Grid.ColumnSpan="2" IsChecked="{Binding Input.RawMouse}" Template="{DynamicResource CheckBoxControlTemplate1}">
                            Use Raw Mouse Input
                        </CheckBox>
                    </st:AutoGrid>
                    <st:AutoGrid Columns="auto,*" RowHeight="auto" Margin="5,5,25,5">
                        <TextBlock Style="{StaticResource Header}">Host Settings</TextBlock>
                        <TextBlock>Start Timer:</TextBlock>
                        <DockPanel>
                            <TextBox DockPanel.Dock="Right" Text="{Binding Host.Countdown}" Width="60" TextAlignment="Center">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0.07"/>
                                </TextBox.Background>
                            </TextBox>
                            <Slider Name="sldTimer" DockPanel.Dock="Left" Minimum="0" Maximum="20" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding Host.Countdown}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
                        </DockPanel>
                        <TextBlock>Maximum Players:</TextBlock>
                        <DockPanel>
                            <TextBox DockPanel.Dock="Right" Text="{Binding Host.MaxPlayer}" Width="60" TextAlignment="Center">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0.07"/>
                                </TextBox.Background>
                            </TextBox>
                            <Slider Name="sldMax" DockPanel.Dock="Left" Minimum="1" Maximum="16" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding Host.MaxPlayer}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
                        </DockPanel>

                    </st:AutoGrid>
                    <st:AutoGrid Columns="*" RowHeight="*" Margin="0,330,-280,0" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Border Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="1" Width="75" Height="30" HorizontalAlignment="Right">
                                <Border.Background>
                                    <SolidColorBrush Color="White" Opacity="0.07"/>
                                </Border.Background>
                                <Button x:Name="btnReset" Content="Reset" Click="btnReset_Click" Style="{StaticResource Hover}"/>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="1" Width="75" Height="30"  Margin="10,0,0,0" HorizontalAlignment="Right">
                                <Border.Background>
                                    <SolidColorBrush Color="White" Opacity="0.07"/>
                                </Border.Background>
                                <Button x:Name="btnApply2" Content="Ok" Click="btnApply2_Click" Style="{StaticResource Hover}"/>
                            </Border>
                        </StackPanel>
                    </st:AutoGrid>

                </st:AutoGrid>
            </Grid>
        </Border>
