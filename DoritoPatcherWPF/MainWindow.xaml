                            <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                                <Border Name="border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Resources/BTN_Reddit.png" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True">
                                        <Setter Property="Source" Value="Resources/BTN_Reddit_Blue.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" />
                    </Button>
                    <Button Name="btnHelp" BorderBrush="{x:Null}" VerticalAlignment="Bottom" Background="#00000000" Template="{DynamicResource BackgroundButton}" Margin="0" Height="54" UseLayoutRounding="False" Width="51.6" Cursor="Hand" ToolTip="Need help? Click here!">
                        <Button.Resources>
                            <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                                <Border Name="border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Resources/BTN_Help.png" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True">
                                        <Setter Property="Source" Value="Resources/BTN_Help_Blue.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="26" />
                    </Button>
                </StackPanel>
                <Button Name="btnChangelog" Click="btnChangelog_Click" BorderBrush="{x:Null}" VerticalAlignment="Top" Background="#00000000" Template="{DynamicResource BackgroundButton}" Width="370" HorizontalAlignment="Left" Margin="0,60,0,0" Cursor="Hand" ToolTip="View the changelist">
                    <Button.Resources>
                        <ControlTemplate x:Key="BackgroundButton" TargetType="Button">
                            <Border Name="border" BorderThickness="0" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Resources>
                    <StackPanel Height="35" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Resources/BTN_Changelog.png" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True">
                                        <Setter Property="Source" Value="Resources/BTN_Changelog_Blue.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Foreground" Value="#ffffffff" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button},
                                                   Path=IsMouseOver}" Value="True">
                                        <Setter Property="Foreground" Value="#FF47A6FF" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Resources>
                        <Image Height="18" HorizontalAlignment="Left" Margin="0" Width="20" />
                        <TextBlock TextWrapping="Wrap" Margin="20,-8,580,-7" Grid.ColumnSpan="2" FontSize="21" TextOptions.TextFormattingMode="Display" VerticalAlignment="Center" Width="340">
                            <Run Text="CURRENT VERSION" BaselineAlignment="Center"/>
                            <Run Text=" 0.4.5-cf04b81b " FontFamily="/Resources/#Aero Matics" BaselineAlignment="Center"/>
                        </TextBlock>
                    </StackPanel>
                </Button>
                <!-- Do not remove this, Fish, I'm looking at you -->
                <TextBlock TextWrapping="Wrap" Margin="0" Foreground="White" FontSize="16" TextOptions.TextFormattingMode="Display" VerticalAlignment="Bottom" Height="34" Opacity="0.5" ><Run Text="THIS PROGRAM IS IN NO WAY AFFILIATED WITH INNOVA CO., "/><LineBreak/><Run Text="343 INDUSTRIES, MICROSOFT OR BUNGIE STUDIOS"/><LineBreak/><Run/></TextBlock>
            </Grid>
        </Grid>

