<Window x:Class="DoritoPatcherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ElDewrito Launcher" Height="576" Width="1024" ResizeMode="NoResize" Loaded="Window_Loaded" Icon="Resources/launcher.ico" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="969*"/>
            <ColumnDefinition Width="55*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/Resources/halo_nightfall_wallpaper__without_logo__by_i7infinity-d7ntwkx.png"/>
        </Grid.Background>
        <TabControl HorizontalAlignment="Left" Height="518" Margin="506.465,50.311,0,0" VerticalAlignment="Top" Width="499" Background="{x:Null}" BorderBrush="White" Padding="0" ScrollViewer.CanContentScroll="True" Grid.ColumnSpan="2">
            <TabControl.Resources>
            </TabControl.Resources>
            <TabItem Header="News">
                <Grid>
                    <Grid Background="Black" Opacity="0.7" />
                    <TextBox x:Name="NewsContent" HorizontalAlignment="Left" Height="458" Margin="10,10,0,0" VerticalAlignment="Top" Width="477" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" BorderThickness="0" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"  AcceptsReturn="True" Text="Error: Could not load News."/>
                </Grid>
            </TabItem>
            <TabItem Header="Changelog">
                <Grid>
                    <Grid Background="Black" Opacity="0.7" />
                    <TextBox x:Name="ChangelogContent" HorizontalAlignment="Left" Height="458" Margin="10,10,0,0" VerticalAlignment="Top" Width="477" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" BorderThickness="0" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"  AcceptsReturn="True" Text="Error: Could not load Changelog."/>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid>
                    <Grid Background="Black" Opacity="0.7" />
                    <Label Content="Player Name" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Foreground="White"/>
                    <TextBox x:Name="txtPlayername" HorizontalAlignment="Left" Height="23" Margin="200,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" LostFocus="txtPlayername_LostFocus" MaxLength="32"/>
                </Grid>
            </TabItem>
            <TabItem Header="Update Status">
                <Grid>
                    <Grid Background="Black" Opacity="0.7" />
                    <RichTextBox x:Name="UpdateContent" HorizontalAlignment="Left" Height="458" Margin="10,10,0,0" VerticalAlignment="Top" Width="477" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" BorderThickness="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto">
                        <FlowDocument></FlowDocument>
                    </RichTextBox>
                </Grid>
            </TabItem>
        </TabControl>
        <!--<Canvas HorizontalAlignment="Left" Height="230" Margin="10,10,0,0" VerticalAlignment="Top" Width="484">
            <Canvas.Background>
                <ImageBrush ImageSource="Resources/logo.png" Stretch="Uniform"/>
            </Canvas.Background>
        </Canvas>-->
        <Canvas HorizontalAlignment="Left" Height="300" Margin="17.465,50.311,0,0" VerticalAlignment="Top" Width="484">
            <Canvas.Background>
                <ImageBrush ImageSource="Resources/logo.png" Stretch="UniformToFill"/>
            </Canvas.Background>
        </Canvas>
        <Border Background="Black" Opacity="0.7" HorizontalAlignment="Left" Margin="17.465,516.938,0,0" VerticalAlignment="Top" Width="484" Height="51.373" BorderBrush="White" BorderThickness="1">
            <Label x:Name="lblStatus" Content="Determining Status..." Foreground="Yellow" VerticalContentAlignment="Center" Padding="25,5,5,5" Background="{x:Null}" />
        </Border>
        <Border  HorizontalAlignment="Left" Margin="17.465,460.938,0,0" VerticalAlignment="Top" Width="159.766" Height="51" BorderBrush="White" BorderThickness="1"></Border>
        <Button x:Name="btnAction" Content="Verifying Game..." HorizontalAlignment="Left" Margin="18.465,460.938,0,0" VerticalAlignment="Top" Width="154.468" Height="51" IsEnabled="False" Click="btnAction_Click" FontWeight="Bold" FontSize="18" Foreground="White"/>
        <Button x:Name="btnIRC" Content="Visit IRC" HorizontalAlignment="Left" Margin="182.231,477.938,0,0" VerticalAlignment="Top" Width="154.468" Height="34" Click="btnIRC_Click"/>
        <Button x:Name="btnBug" Content="Report Bug" HorizontalAlignment="Left" Margin="346.997,477.938,0,0" VerticalAlignment="Top" Width="154.468" Height="34" Click="btnBug_Click"/>
        <Button x:Name="btnClose" Content="x" Click="CloseButton_Click"  Margin="11.517,-0.5,5.667,554.647" BorderBrush="#FF707070" BorderThickness="1" RenderTransformOrigin="0.509,0.473" Grid.Column="1" FontSize="10" />
        <Button x:Name="btnMin" Content="-" Click="MinButton_Click" Margin="942.517,-3.375,43.483,554.397" BorderBrush="#FF707070" BorderThickness="1" RenderTransformOrigin="0.509,0.473" FontSize="20" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" />
        <Rectangle x:Name="btnDrag" MouseDown="Drag_MouseDown" Margin="0,0.02,26.483,554.647" RenderTransformOrigin="0.509,0.473" Fill="Black" Opacity="0"/>
    </Grid>

    <Window.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Name="Panel" Margin="-2,0,0,0">
                            <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="20,10"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Panel" Property="Background" Value="White" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Panel" Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="White"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="0" Background="{TemplateBinding Background}">
                            <Grid>
                                <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="White" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <!--<Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Black" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>-->
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
