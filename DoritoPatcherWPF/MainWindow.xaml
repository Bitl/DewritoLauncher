        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="False"
        utils:WindowMovement.IsDraggable="True"
        Loaded="Window_Loaded"
        UseLayoutRounding="True">
    <Window.Resources>
        <awe:WebSessionProvider x:Key="session">
            <core:WebPreferences 
                RemoteFonts="False"
                SmoothScrolling="True"
                EnableGPUAcceleration="True"
                WebGL="True"
                />
        </awe:WebSessionProvider>
        <Storyboard x:Key="fade" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="btnAction" 
        		Storyboard.TargetProperty="Opacity" From="0.20" To="1" 
        		Duration="0:0:1" BeginTime="0:0:0" AutoReverse="True" />
